<% controller_path = controller.class.name.to_snake[0..-12] %>
<div class="content-layout with-right-side">
	<div class="content">

		<%= render partial: "ruth_admin/components/flash" %>

		<%= breadcrumbs style: :bootstrap if defined?(breadcrumbs) %>
		
		<% if lookup_context.find_all("#{controller_path}/_filters").any? %>
			<% partial = render(partial: "#{controller_path}/filters").trim %>
			<% if !partial.blank? %>
				<div class="filters panel panel-default"><div class="panel-body">
					<!--<h2><%= t("headers.filters") %></h2>-->
					<%= partial.html_safe %>
				</div></div>
			<% end %>
		<% end %>

		<%= yield %>

	</div>
	<div class="side">
		
		<% if lookup_context.find_all("#{controller_path}/_actions").any? %>
			<% partial = render(partial: "#{controller_path}/actions").trim %>
			<% if !strip_tags(partial).blank? %>
				<!--<h2><%= t("headers.actions") %></h2>-->
				<%= partial.html_safe %>
			<% end %>
		<% end %>

		<% if lookup_context.find_all("#{controller_path}/_related").any? %>
			<% partial = render(partial: "#{controller_path}/related").trim %>
			<% if !strip_tags(partial).blank? %>
				<!--<h2><%= t("headers.related") %></h2>-->
				<%= partial.html_safe %>
			<% end %>
		<% end %>

	</div>
</div>